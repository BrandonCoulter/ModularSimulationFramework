<?xml version="1.0" encoding="UTF-8"?>

<MSFScenario>
    <Metadata>
        <Name>Basic Scenario</Name>
        <Description>A simple scenario with two missiles and a waypoint.</Description>
        <Author>Brandon Coulter</Author>
    </Metadata>

    <SimulationSetup>
        <TimeStepInterval>0.001</TimeStepInterval>
        <Timeout>600.0</Timeout>
        <GenericEventTriggers>
            <!-- Enter Events Here As Needed -->
            <trigger time="600.0" type="TIMEOUT" delay="0.0"/>
        </GenericEventTriggers>
     </SimulationSetup>

    <!-- Sim Entities -->
    <SimulationEntities>
        <SimulationEntity name="missile_0">
            <ModelClass>missile</ModelClass>
            <ModelType>dynamic</ModelType>
            <EmplacementData>
                <!-- Position in meters -->
                <position x="0.0" y="0.0" z="0.0"/>
                <!-- Orientation Quat -->
                <orientation w="1.0" x="0.0" y="0.0" z="0.0"/>
            </EmplacementData>
            <EntityParameters>
                <parameter name="speed" value="1500.0" unit="m/s"/>
            </EntityParameters>
            <EventTriggers>
                <trigger time="10.0" type="SELF_DESTRUCT" delay="0.0"/>
            </EventTriggers>
        </SimulationEntity>
        <SimulationEntity name="missile_1">
            <ModelClass>missile</ModelClass>
            <ModelType>dynamic</ModelType>
            <EmplacementData>
                <!-- Position in meters -->
                <position x="270.0" y="10.0" z="890.0"/>
                <!-- Orientation Quat (Rotated by 90 Degrees) -->
                <orientation w="0.7071067811865476" x="0.0" y="0.7071067811865476" z="0.0"/>
            </EmplacementData>
            <EntityParameters>
                <parameter name="speed" value="1500.0" unit="m/s"/>
            </EntityParameters>
            <EventTriggers>
                <trigger time="45.0" type="STAGE2" delay="1.0"/>
            </EventTriggers>
        </SimulationEntity>

        <!-- Static Waypoint -->
        <SimulationEntity name="end_waypoint">
            <ModelClass>waypoint</ModelClass>
            <ModelType>static</ModelType>
            <EmplacementData>
                <position x="1000.0" y="10000.0" z="1000.0"/>
            </EmplacementData>
            <EntityParameters>
                <!-- Tolerance radius in m (1 cm)-->
                <parameter name="tolerance" value="0.01" unit="m"/>
            </EntityParameters>
        </SimulationEntity>
        <SimulationEntity name="broken_entity">
            <ModelClass>broken</ModelClass>
            <ModelType>static</ModelType>
            <EmplacementData>
                <position x="1000.0" y="10000.0" z="1000.0"/>
            </EmplacementData>
            <EntityParameters>
                <!-- Tolerance radius in m (1 cm)-->
                <parameter name="tolerance" value="0.01" unit="m"/>
            </EntityParameters>
        </SimulationEntity>
    </SimulationEntities>
</MSFScenario>